{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "extends": [
        "airbnb-base",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "@typescript-eslint/naming-convention": [
        "error",
        {
          "selector": "interface",
          "prefix": ["I"],
          "format": ["PascalCase"]
        }
      ],
    "rules": {
        "import/extensions": [
            "error",
            "ignorePackages",
            {
              "ts": "never"
            }
        ],
        "settings": {
            "import/resolver": {
              "typescript": {}
            }
        }
    }
}
